package com.app{	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.Event;	public class Console extends MovieClip	{		public function Console(message:String="Hello world", reset:Boolean= false)		{			// constructor code			reset_btn.visible = reset;			x = Globals.vars.ancho / 2;			y = Globals.vars.alto / 2 + height / 2;			rotation = -90;			console_txt.text = message;			if (reset)			{				close_btn.x = 430;				close_btn.texto.text = "Cancelar";				reset_btn.addEventListener(MouseEvent.CLICK, restartGame );			}			close_btn.addEventListener(MouseEvent.CLICK, dismiss);		}		function dismiss(e:Event):void		{			parent.removeChild(this);		}		function restartGame(e:Event):void		{			MovieClip(root).confirmReset();			parent.removeChild(this);		}	}}