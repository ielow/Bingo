package com.app {		import flash.media.Sound;	import flash.events.Event;	import flash.media.SoundChannel;			public class LoopSound extends Sound {						public function LoopSound() {			var ctr:SoundChannel= this.play()			ctr.addEventListener(Event.SOUND_COMPLETE,infinite);		}		function infinite(evt:Event){			evt.target.removeEventListener(Event.SOUND_COMPLETE,infinite);		}	}	}